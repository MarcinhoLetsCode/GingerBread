<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<FrameLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/flCoffe"
    tools:context=".ProdutoFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBigCoffe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/activity_modelo"/>
</FrameLayout>

    <Button
        android:id="@+id/btMenos"
        android:layout_marginRight="60dp"
        android:drawableBottom="@drawable/ic_baseline_remove"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="16dp"
        android:layout_width="35dp"
        android:layout_height="40dp"/>

    <TextView
        android:text="0"
        android:textSize="24sp"
        android:id="@+id/tvQtde"
        android:layout_gravity="bottom|center"
        android:layout_width="20dp"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/btMais"
        android:layout_marginLeft="60dp"
        android:drawableBottom="@drawable/ic_baseline_add"
        android:textColor="@color/white"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="16dp"
        android:layout_width="35dp"
        android:layout_height="40dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:src="@drawable/ic_baseline_add_cart"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|right"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>